<% if @threads.errors.any? %>
<div class='alert alert-danger alert-dismissible'>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<% @threads.errors.full_messages.each do |error| %>
	<span><%= error %></span></br>
	<% end %>
</div>
<% end %>
<%= form_for @threads do |f| %>
<div class="form-group">
	<h5><%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %></h5>
	</div>
	<div class="form-group">
		<h5><%= f.label :content %>
			<%= f.text_area :content, rows: 10, class: 'form-control' %></h5>
		</div>
		<div class="form-group">
			<%= f.submit "Buat", class: 'btn btn-primary form-control' %>
		</div>	
		<% end %>